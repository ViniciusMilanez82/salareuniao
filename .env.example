# Banco de Dados
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=salareuniao
DATABASE_URL="postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}?schema=public"

# Autenticação
JWT_SECRET=your_super_secret_jwt_string_with_at_least_32_characters
JWT_EXPIRES_IN=7d

# Backend
PORT=3001
NODE_ENV=development
CORS_ORIGIN=http://localhost:5173

# Criptografia de API keys (recomendado em produção)
ENCRYPTION_KEY=your_encryption_key_at_least_16_characters

# APIs Externas (Opcional)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
SERPER_API_KEY=
